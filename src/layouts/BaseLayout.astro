---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<title>{title}</title>
	</head>
	<body
		class='bg-gradient-to-r from-stone-50 to-stone-300 dark:from-gray-800 dark:to-slate-900'>
		<slot />
		<footer class='py-5'>
			<p class='text-center text-neutral-900 dark:text-neutral-50'>
				Made with ❤️ by <a
					href='https://kjroelke.online'
					target='_blank'
					rel='noopener noreferrer'
					class='text-accent-500 dark:text-accent-400'
					>K.J. Roelke</a
				>
			</p>
		</footer>
	</body>
</html>

<style is:global>
	.text-gradient {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-dark)) 30%,
			white 60%
		);
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	@media (prefers-color-scheme: dark) {
		.text-gradient {
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}
	}
</style>
